    <script>
        // HTMLVaultÊ©üËÉΩ„ÇíÁµ±Âêà - infohiroki„Éá„Ç∂„Ç§„É≥ÂØæÂøú
        let allFiles = [];
        let filteredFiles = [];
        let searchQuery = '';
        let autoManager = null;
        
        // blog-loader.js„Çí‰ΩøÁî®„Åó„Åü„Éï„Ç°„Ç§„É´Ë™≠„ÅøËæº„Åø
        async function loadFiles() {
            try {
                // blog-loader.js „ÅÆ AutoFileManager „Çí‰ΩøÁî®
                if (!autoManager) {
                    autoManager = new AutoFileManager();
                }
                
                allFiles = await autoManager.refreshFileList();
                console.log('Ëá™ÂãïÊ§úÂá∫„Åï„Çå„Åü„Éï„Ç°„Ç§„É´:', allFiles);
                console.log(`üîç Ë™≠„ÅøËæº„ÅøÁµêÊûú: ${allFiles.length}‰ª∂„ÅÆ„Éï„Ç°„Ç§„É´„ÅåÊ§úÂá∫„Åï„Çå„Åæ„Åó„Åü`);
                
                // ÂïèÈ°å„ÅÆ„ÅÇ„ÇãË®ò‰∫ã„ÇíÁâπÂà•„Å´„ÉÅ„Çß„ÉÉ„ÇØ
                const notionArticle = allFiles.find(f => f.id === 'notion-database-creation-guide');
                const chromeArticle = allFiles.find(f => f.id === 'chrome-extensions-practical-3-selections');
                console.log('NotionË®ò‰∫ã:', notionArticle);
                console.log('ChromeÊã°ÂºµË®ò‰∫ã:', chromeArticle);
                
                // „Éï„Ç©„Éº„É´„Éê„ÉÉ„ÇØ: Áõ¥Êé•files.json„ÇíË™≠„ÅøËæº„Åø
                if (allFiles.length === 0) {
                    const response = await fetch('files.json');
                    const data = await response.json();
                    allFiles = data.files || [];
                }
                
                filteredFiles = [...allFiles];
                applyFilters();
                renderArticles();
                
            } catch (error) {
                console.error('„Éï„Ç°„Ç§„É´„ÅÆË™≠„ÅøËæº„Åø„Å´Â§±Êïó„Åó„Åæ„Åó„Åü:', error);
                // ÊúÄÁµÇ„Éï„Ç©„Éº„É´„Éê„ÉÉ„ÇØ
                try {
                    const response = await fetch('files.json');
                    const data = await response.json();
                    allFiles = data.files || [];
                    filteredFiles = [...allFiles];
                    renderArticles();
                } catch (fallbackError) {
                    console.error('„Éï„Ç©„Éº„É´„Éê„ÉÉ„ÇØË™≠„ÅøËæº„Åø„ÇÇÂ§±Êïó„Åó„Åæ„Åó„Åü:', fallbackError);
                }
            }
        }
        
        // Ë®ò‰∫ã„Ç´„Éº„Éâ„ÇíÁîüÊàêÔºàinfohiroki„Çπ„Çø„Ç§„É´Ôºâ
        function createArticleCard(file) {
            
            // „Ç¢„Ç§„Ç≥„É≥Ë°®Á§∫„É≠„Ç∏„ÉÉ„ÇØ
            function renderIcon(icon) {
                if (!icon) {
                    return '<span class="article-icon">üìù</span>'; // „Éá„Éï„Ç©„É´„Éà„Ç¢„Ç§„Ç≥„É≥
                }
                
                // Skill Icons URLÂΩ¢Âºè„ÅÆÂ†¥Âêà
                if (icon.startsWith('https://skillicons.dev/icons')) {
                    return `<img src="${icon}" class="article-icon" alt="icon">`;
                }
                
                // „É≠„Éº„Ç´„É´ÁîªÂÉè„Éï„Ç°„Ç§„É´„ÅÆÂ†¥Âêà
                if (icon.includes('.png') || icon.includes('.jpg') || icon.includes('.svg') || icon.includes('.webp')) {
                    return `<img src="${icon}" class="article-icon" alt="icon">`;
                }
                
                // ÁµµÊñáÂ≠ó„ÅÆÂ†¥Âêà
                return `<span class="article-icon">${icon}</span>`;
            }
            
            const iconHtml = renderIcon(file.icon);
            
            return `
                <article class="article-card" onclick="openFile('${file.path}')">
                    <div class="article-header">
                        ${iconHtml}
                        <time class="article-date">${file.created}</time>
                    </div>
                    <div class="card-body">
                        <h3 class="article-title">
                            <a href="#" onclick="event.preventDefault(); openFile('${file.path}');">${file.title}</a>
                        </h3>
                        <p class="article-description">${file.description}</p>
                    </div>
                </article>
            `;
        }
        
        // „Éï„Ç°„Ç§„É´„ÇíÈñã„ÅèÈñ¢Êï∞
        function openFile(path) {
            // path„ÅåÊó¢„Å´html-files/„ÅßÂßã„Åæ„Å£„Å¶„ÅÑ„ÇãÂ†¥Âêà„ÅØ„Åù„ÅÆ„Åæ„Åæ„ÄÅ„Åù„ÅÜ„Åß„Å™„Åë„Çå„Å∞ËøΩÂä†
            const fullPath = path.startsWith('html-files/') ? path : `html-files/${path}`;
            window.location.href = fullPath;
        }
        
        // Ë®ò‰∫ã„ÇíË°®Á§∫
        function renderArticles() {
            const container = document.getElementById('articlesContainer');
            const noResults = document.getElementById('noResults');
            
            if (filteredFiles.length === 0) {
                container.innerHTML = '';
                noResults.style.display = 'block';
            } else {
                container.innerHTML = filteredFiles.map(createArticleCard).join('');
                noResults.style.display = 'none';
            }
        }
        
        
        // „Éï„Ç£„É´„Çø„ÉºÈÅ©Áî®ÔºàÊ§úÁ¥¢„Å®„ÇΩ„Éº„ÉàÔºâ
        function applyFilters() {
            let result = [...allFiles];
            
            // Ê§úÁ¥¢„Éï„Ç£„É´„Çø„Éº
            if (searchQuery) {
                result = result.filter(file => {
                    const searchFields = [
                        file.title,
                        file.description
                    ].join(' ').toLowerCase();
                    return searchFields.includes(searchQuery);
                });
            }
            
            
            
            filteredFiles = result;
            renderArticles();
        }
        
        // Ê§úÁ¥¢Ê©üËÉΩ
        function search(query) {
            searchQuery = query.toLowerCase().trim();
            applyFilters();
        }
        
        // „Ç§„Éô„É≥„Éà„É™„Çπ„Éä„Éº
        document.addEventListener('DOMContentLoaded', function() {
            loadFiles();
            
            // Ê§úÁ¥¢ÂÖ•ÂäõÔºà„Éá„Éê„Ç¶„É≥„ÇπÊ©üËÉΩ‰ªò„ÅçÔºâ
            const searchInput = document.getElementById('searchInput');
            let searchTimeout;
            if (searchInput) {
                searchInput.addEventListener('input', (e) => {
                    clearTimeout(searchTimeout);
                    searchTimeout = setTimeout(() => {
                        search(e.target.value);
                    }, 300);
                });
            }
            
            
            
            
            // „Ç≠„Éº„Éú„Éº„Éâ„Ç∑„Éß„Éº„Éà„Ç´„ÉÉ„Éà
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    searchInput?.blur();
                }
                if (e.key === '/' && !e.target.matches('input')) {
                    e.preventDefault();
                    searchInput?.focus();
                }
            });
        });
    </script>
</body>
</html>